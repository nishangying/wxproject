.hire {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 2%;
  background:#f5f2e3;
}
.temp{
  width: 100%;
  border-radius: 10rpx;
  border: 1px solid #127168;
  box-shadow: 1px 2px 3px #127168;
  overflow: hidden;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.temp .title{
  display: block;
  font-size: 16px;
  font-weight: bold;
}
.temp .content{
  font-size: 12px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 8;
  -webkit-box-orient: vertical;
}
