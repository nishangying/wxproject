/**index.wxss**/

page {
  background: #f3f3f3;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container .swiperTemp{
  width: 100%;
  height: 360rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 10px;
  background: #fff;
}
.container .swiperTemp .swiperBox{
  height: 100%;
  width: 100%;
}
.container .swiperTemp .swiperBox .swiperItem{
  height: 100%;
  width: 100%;
}
.container .swiperTemp image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.container .nav{
  width:100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 15rpx 35rpx 20rpx;
  background: #fff;

}
.container .nav .nav_item{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  font-size: 15px;
  background:linear-gradient(to right,#ffe55c,#ffbe19); 
  text-align: center;
  line-height: 100rpx;
}