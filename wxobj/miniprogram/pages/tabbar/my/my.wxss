/**index.wxss**/

.myPage {
  background: #fff;
  padding: 50rpx;
  box-sizing: border-box;
}
.myPage .info{
  width: 100%;
  background:#fff;
  text-align: center;
}
.myPage .info .infoBorder{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border:1px solid #e0620d;
  padding: 5rpx;
  margin:  30rpx auto;
}
.myPage .info .infoBorder .HeadImg{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.myPage .content{
  margin-top: 150rpx;
  padding: 4% 0;
  box-sizing: border-box;
}
.myPage .content .textTemp{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  border-bottom: 2px soild #e0620d;
}
.myPage .content .textTemp .leftTemp{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.myPage .content .textTemp .leftIcon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.myPage .content .textTemp .leftTxt{
  
  text-align: left;
}
.myPage .content .textTemp .rightIcon{
  width: 30rpx;
  height: 30rpx;
}