/**index.wxss**/

page {
  background: #f3f3f3;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container{
  position: relative;
}
.globalBg{
  width: 100%;
  height: 100vh;
  display: block;
  opacity: .7;
}
.globalContent{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}
.globalContent .swiperTemp{
  width: 100%;
  height: 360rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 10px;
}
.globalContent .swiperTemp .swiperBox{
  height: 100%;
  width: 100%;
}
.globalContent .swiperTemp .swiperBox .swiperItem{
  height: 100%;
  width: 100%;
}
.globalContent .swiperTemp image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.globalContent .nav{
  width:100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  flex-wrap: wrap;
  padding: 15rpx 35rpx 20rpx;
}
.globalContent .nav .nav_item{
  width: 25%;
}
.globalContent .nav .nav_item .item{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  font-size: 15px;
  background:linear-gradient(to right,#ffe55c,#ffbe19); 
  text-align: center;
  line-height: 116rpx;
  border: 1px solid #629eba;
  padding: 2rpx;
  box-sizing: border-box;
  margin:0 auto;
}
.globalContent .urgent{
  width: 96%;
  height: 600rpx;
  border:1px solid #629eba;
  border-radius: 10rpx;
  margin: 40rpx auto 0;
  background:#fff;
  overflow: scroll;
}