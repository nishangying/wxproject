.detailPage {
  width: 100%;
  min-height: 100vh;
  background: #fff;
  padding-bottom: 120rpx;
  box-sizing: border-box;

}
.header{
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #a9a5a5;
}
.header .leftImg{
  width: 20%;
  
}
.header .leftImg .avatarUrl{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  display: block;
}

.header .rightImg{
  width: 80%;
}
.header .rightImg .name{
  font-size: 12px;
  display: block;
  color: #000;
}
.header .rightImg .time{
  font-size: 12px;
}





.detailPage .msgTemp{
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx;
  border-bottom: 1px solid #a9a5a5;
}
.detailPage .msgTemp .imgBox{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-flow: wrap;
}
.detailPage .msgTemp .imgBox .picture{
  width: 33%;
  height: 210rpx;
  box-sizing: border-box;
  padding: 15rpx;
  border-radius: 15rpx;
}
.detailPage .msgTemp .msg{
  width: 100%;
  text-align: justify;
  font-size: 12px;
}
.detailPage .comment{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.detailPage .comment .ulTemp{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  box-shadow: border-box;
  
}
.detailPage .comment .ulTemp .leftitem{
  width: 15%;
}
.detailPage .comment .ulTemp .leftitem .authorImg{
 width: 80rpx;
 height: 80rpx;
 border-radius: 50%;
}
.detailPage .comment .ulTemp .rightitem{
  width: 85%;
}


.detailPage .comment .ulTemp .rightitem .author{
  width: 100%;
  white-space: nowrap;
  font-size: 14px;
  color:#000;
  text-align: left;
  display: block;
}

.detailPage .comment .ulTemp .rightitem{
  width: 100%;
  font-size: 12px;
  color:#a9a5a5;
  text-align: justify;
}
.detailPage .comment .ulTemp .rightitem{
  width: 85%;
}

.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 85rpx;
  background: #3e3a3a;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.footer .ipt{
  width: 80%;
  height: 85%;
  box-shadow: border-box;
  border-radius: 10rpx;
  background: #faf8f8;
  font-size: 14px;
}

.footer .subBtn{
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  font-size: 14px;
  background: #e0620d;
  color: #fff;
}

